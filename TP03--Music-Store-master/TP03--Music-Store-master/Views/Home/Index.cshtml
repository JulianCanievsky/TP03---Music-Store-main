@{
    ViewData["Title"] = "Catálogo de Discos";
}
<head>
<link rel="stylesheet" href="~/css/style.css" asp-append-version="true">
</head>

<body>
    <section class="Catalogo">
         <h1>THE ALBUM CATALOG</h1>
     <img src="~/img/logo.png" alt="logo">

    </section>
   
    <section class="Albums">
        @foreach (Disco disco in ViewBag.Discos.Values)
        {
                <div>
                    <img src="~/img/@disco.Foto" alt="@disco.Titulo">
                  
                        <h2>@disco.Titulo</h2>
                        <h3>@disco.Artista</h3>
                    <a href='@Url.Action("Detalle", "Home", new { Id = disco.Id })'>Ver Detalles</a>
                    
                </div>       
        }
    </section>
        
</body>